# Method.AI Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# IBM RXN for Chemistry Integration (Optional)
# =============================================================================
# Get your API key from: https://rxn.res.ibm.com/
# The application will use deterministic placeholders if these are not set.

# Your IBM RXN API key
RXN_API_KEY=

# Your IBM RXN project ID (optional, will use default project if not set)
RXN_PROJECT_ID=

# =============================================================================
# Application Settings
# =============================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# API host and port
API_HOST=0.0.0.0
API_PORT=8000

# Enable debug mode (disable in production)
DEBUG=false

# =============================================================================
# Security Settings
# =============================================================================

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# Storage Settings
# =============================================================================

# Path for feedback storage (relative to backend directory)
FEEDBACK_STORAGE_PATH=app/services/_feedback/feedback.jsonl
